const { EmbedBuilder } = require('@discordjs/builders');
const { SlashCommandBuilder, ModalBuilder,ActionRowBuilder, TextInputBuilder, TextInputStyle, Embedbuilder, PermissionFlagsBits, Embed, client } = require('discord.js');

module.exports = {
	data: new SlashCommandBuilder()
		.setName('say')
		.setDescription('Envia un mensaje como Karmabot.')
		.setDefaultMemberPermissions(PermissionFlagsBits.ManageMessages)
    	.addSubcommand(subcommand =>
	    	subcommand
		    	.setName('msg')
			    .setDescription('Envia un mensaje')
			    .addUserOption(option => option.setName('texto').setDescription('Envia un mensaje')))

	async execute(interaction) {
			const {channel, options} = interaction;
		    const mensaje = options.getString('texto');
            channel.send(`${mensaje}`)
		},
		
};
